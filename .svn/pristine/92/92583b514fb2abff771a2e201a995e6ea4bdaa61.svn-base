			                    <tr style="font-size: 14px;">
			                      <th>번호</th>
			                      <th>제목</th>
			                      <th>작성자</th>
			                      <th>등록일</th>
			                    </tr>
			                  </thead>
			                  <tbody class="boardList">

			                  </tbody>
			                </table>
		              	</div>
					</div>
				</div>
			</div>
