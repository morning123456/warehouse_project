<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Mentoring-Mapper">

	<select id="selectPhoto" resultType="str">
		select photo
		from
		employee
		where eno = #{eno}
	</select>

	<select id="selectMyMentee" parameterType="int" resultType="submentoring">
		select
			a.name, c.ppsname, a.condition, d.startDate, d.endDate, a.job, e.dname, d.mtno
		from
			employee a, submentoring b, postposition c, mentoring d, department e
		where b.mentee=a.eno
		and a.ppscode=c.ppscode
		and b.smno=d.smno
		and a.dno=e.dno
		and b.mento=#{eno}
        and b.approve=1
	</select>

	<select id="selectMyMenteeCount" resultType="int">
		select
			count(*)
		from
			submentoring
		where mento=#{eno}
        and approve=1
	</select>

	<select id="selectMyMento" parameterType="int" resultType="submentoring">
		select
			a.name, c.ppsname, a.condition, d.startDate, d.endDate, a.job, e.dname, d.mtno
		from
			employee a, submentoring b, postposition c, mentoring d, department e
		where b.mento=a.eno
		and a.ppscode=c.ppscode
		and b.smno=d.smno
		and a.dno=e.dno
		and b.mentee=#{eno}
        and b.approve=1
	</select>

	<select id="selectMyMentoCount" resultType="int">
		select
			count(*)
		from
			submentoring
		where mentee=#{eno}
        and approve=1
	</select>

	<select id="selectMentoRank" resultType="submentoring">
		select
            count(a.mento) as count, b.name, c.ppsname, b.condition
        from
            submentoring a, employee b, postposition c
        where a.mento = b.eno
        and b.ppscode=c.ppscode
		and rownum <![CDATA[<=]]> 5
        group by a.mento, b.name, c.ppsname, b.condition
        order by count(a.mento) desc
	</select>

	<select id="subMentoringList" parameterType="int" resultType="submentoring">
		select
			a.name, c.ppsname, b.regdate, b.smno
		from
			employee a, submentoring b, postposition c
		where b.mentee=a.eno
		and a.ppscode=c.ppscode
		and b.mento=#{eno}
        and b.approve=0
	</select>

	<select id="subMentoringListCount" resultType="int">
		select
			count(mentee)
		from
			submentoring
		where mento=#{eno}
		and approve=0
	</select>

	<select id="subMenteeDetail" resultType="submentoring">
		select
			a.name, c.ppsName, a.job, b.intro, b.period, d.dname, a.mbti, b.smno
		from
			employee a, submentoring b, postposition c, department d
		where b.mentee=a.eno
		and a.ppscode=c.ppscode
		and a.dno=d.dno
		and b.smno=#{smno}
        and b.approve=0
	</select>

	<select id="selectMtno" resultType="String">
		select 'MT' ||
		trim(nvl(max(to_char(to_number(substr(mtno,3))+1,'000000')),'000001'))
		as mtno
		from mentoring

		union

		select nvl(null,'MT000001') as mtno
		from
		dual
		where not exists (select mtno
		from mentoring)
	</select>

	<update id="acceptMentoring" parameterType="mentoring">
		{call
			declare
				begin

				update submentoring
		        set approve=1
		        where smno=#{smno};

				insert into mentoring(mtno,smno,startDate,endDate)
       		 	values(#{mtno},#{smno},sysdate,#{endDate});
		end}
	</update>

	<select id="endMentoringList" resultType="submentoring" parameterType="int">
		select
			a.name, c.ppsname, a.condition, d.startDate, d.endDate, b.mento, to_date(d.endDate)-to_date(sysdate) as dDay
		from
			employee a, submentoring b, postposition c, mentoring d
		where b.mentee=a.eno
		and a.ppscode=c.ppscode
		and b.smno=d.smno
		and b.mento=#{eno}
        and b.approve=1
        and to_date(d.endDate)-to_date(sysdate) <![CDATA[<=]]> 3

        union all

        select
			a.name, c.ppsname, a.condition, d.startDate, d.endDate, b.mento, to_date(d.endDate)-to_date(sysdate) as dDay
		from
			employee a, submentoring b, postposition c, mentoring d
		where b.mento=a.eno
		and a.ppscode=c.ppscode
		and b.smno=d.smno
		and b.mentee=#{eno}
        and b.approve=1
        and to_date(d.endDate)-to_date(sysdate) <![CDATA[<=]]> 3
	</select>

	<update id="exdateApply" parameterType="submentoring">
		update submentoring
        set regDate=sysdate, period=#{period}, approve=0
        where mento=#{mento}
        and mentee=#{mentee}
	</update>

	<select id="endMentoringListCount" resultType="int">
		select
			count(*)
		from
			submentoring
		where mento=#{eno}
		or mentee=#{eno}
		and approve=1
	</select>

	<select id="myWorkList" parameterType="int" resultType="work">
		select
			a.wtitle, b.viewCnt
		from
			work a, knowhow b, employee c
		where a.wcode=b.wcode
		and a.eno=c.eno
		and a.eno=#{eno}
		and rownum <![CDATA[<=]]> 5
		order by b.viewCnt
	</select>

	<update id="applyMentoring" parameterType="submentoring">
		insert into
			submentoring(smno, intro, period, mentee, mento)
		values(#{smno}, #{intro}, #{period}, #{mentee}, #{mento})
	</update>

	<select id="subMentoring" parameterType="int" resultType="int">
		select
			count(*)
		from
			submentoring
		where mento = #{mento}
		and mentee = #{mentee}
	</select>

	<select id="selectSmno" resultType="String">
		select 'SM' ||
		trim(nvl(max(to_char(to_number(substr(smno,3))+1,'000000')),'000001'))
		as smno
		from submentoring

		union

		select nvl(null,'SM000001') as smno
		from
		dual
		where not exists (select smno
		from submentoring)
	</select>

	<select id="myMentoWorkList" parameterType="int" resultType="submentoring">
		select
			a.name, c.ppsname, e.dname, f.wtitle, f.wend, f.wstatus, f.wcode
		from
			employee a, submentoring b, postposition c, department e, work f
		where b.mento=a.eno
		and a.ppscode=c.ppscode
		and a.dno=e.dno
		and b.mentee=#{eno}
        and b.approve=1
        and a.eno=f.eno
        and f.wopen=1

	</select>

	<select id="myMentoWorkListCount" parameterType="int" resultType="int">
		select
			count(*)
		from
			employee a, submentoring b, work f
		where b.mento=a.eno
		and b.mentee=#{eno}
        and b.approve=1
        and a.eno=f.eno
        and f.wopen=1
	</select>

	<select id="myMentoDocList" parameterType="int" resultType="submentoring">
		select
			a.name, c.ppsname, e.dname, f.ddate, f.title, f.state, g.formclass
		from
			employee a, submentoring b, postposition c, department e, signdoc f, signform g
		where b.mento=a.eno
		and a.ppscode=c.ppscode
		and a.dno=e.dno
		and b.mentee=#{eno}
        and b.approve=1
        and a.eno=f.eno
        and f.sformno=g.sformno
        and f.sopen=0
	</select>

	<select id="myMentoDocListCount" parameterType="int" resultType="int">
		select
			count(*)
		from
			employee a, submentoring b, signdoc f, signform g
		where b.mento=a.eno
		and b.mentee=#{eno}
        and b.approve=1
        and a.eno=f.eno
        and f.sformno=g.sformno
        and f.sopen=0
	</select>

	<update id="endMentoring" parameterType="str">
		{call
			declare
				begin

				update submentoring
		        set approve=3
		        where smno = (select smno
		                        from mentoring
		                        where mtno=#{mtno});

				delete
				from mentoring
				where mtno=#{mtno};
		end}
	</update>

	<select id="myMenteeWorkList" parameterType="int" resultType="submentoring">
		select
			a.name, c.ppsname, e.dname, f.wtitle, f.wend, f.wstatus, f.wcode
		from
			employee a, submentoring b, postposition c, department e, work f
		where b.mentee=a.eno
		and a.ppscode=c.ppscode
		and a.dno=e.dno
		and b.mento=#{eno}
        and b.approve=1
        and a.eno=f.eno
        and f.wopen=1
	</select>

	<select id="myMenteeWorkListCount" parameterType="int" resultType="int">
		select
			count(*)
		from
			employee a, submentoring b, work f
		where b.mentee=a.eno
		and b.mento=#{eno}
        and b.approve=1
        and a.eno=f.eno
        and f.wopen=1
	</select>

	<select id="myMenteeDocList" parameterType="int" resultType="submentoring">
		select
			a.name, c.ppsname, e.dname, f.ddate, f.title, f.state, g.formclass
		from
			employee a, submentoring b, postposition c, department e, signdoc f, signform g
		where b.mentee=a.eno
		and a.ppscode=c.ppscode
		and a.dno=e.dno
		and b.mento=#{eno}
        and b.approve=1
        and a.eno=f.eno
        and f.sformno=g.sformno
        and f.sopen=0
	</select>

	<select id="myMenteeDocListCount" parameterType="int" resultType="int">
		select
			count(*)
		from
			employee a, submentoring b, signdoc f, signform g
		where b.mentee=a.eno
		and b.mento=#{eno}
        and b.approve=1
        and a.eno=f.eno
        and f.sformno=g.sformno
        and f.sopen=0
	</select>

	<select id="sysdateMentoWork" resultType="submentoring">
		select
			a.name, c.ppsName, f.wtitle, f.wdate
		from
			employee a, submentoring b, postposition c, work f
		where b.mento=a.eno
		and a.ppscode=c.ppscode
		and b.mentee=#{eno}
        and b.approve=1
        and a.eno=f.eno
        and f.wopen=1
        and to_char(f.wdate)=to_char(sysdate)
	</select>

	<select id="sysdateMenteeWork" resultType="submentoring">
		select
			a.name, c.ppsName, f.wtitle, f.wdate
		from
			employee a, submentoring b, postposition c, work f
		where b.mentee=a.eno
		and a.ppscode=c.ppscode
		and b.mento=#{eno}
        and b.approve=1
        and a.eno=f.eno
        and f.wopen=1
        and to_char(f.wdate)=to_char(sysdate)
	</select>

	<select id="sysdateMentoringAllWork" resultType="submentoring">
		select
			a.name, c.ppsName, f.wtitle, f.wdate
		from
			employee a, submentoring b, postposition c, work f
		where b.mentee=a.eno
		and a.ppscode=c.ppscode
		and b.mento=#{eno}
        and b.approve=1
        and a.eno=f.eno
        and f.wopen=1
        and to_char(f.wdate)=to_char(sysdate)

        union all

        select
			a.name, c.ppsName, f.wtitle, f.wdate
		from
			employee a, submentoring b, postposition c, work f
		where b.mento=a.eno
		and a.ppscode=c.ppscode
		and b.mentee=#{eno}
        and b.approve=1
        and a.eno=f.eno
        and f.wopen=1
        and to_char(f.wdate)=to_char(sysdate)
	</select>

</mapper>

