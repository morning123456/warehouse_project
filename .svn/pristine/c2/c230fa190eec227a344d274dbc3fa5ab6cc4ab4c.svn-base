<script type="text/javascript">
function dbClick(div){
	console.log($(div).find('.fileType').val());
	if($(div).find('.fileType').val() != "folder"){
		//다운로드?
				
		//뷰어?
				
		return;
	}
	var dist = $(div).find('.file-item-name').text().trim();
	$('.lastDist').val(dist);
	console.log("1",dist);
	dist = $('#dist').val() +"/"+ dist;
	console.log("2",dist);
	$('#dist').val(dist).trigger('change');
