<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>


<head>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jstree/3.2.1/themes/default/style.min.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/jstree/3.2.1/jstree.min.js"></script>

<style>
.user-block img {
	float: left;
	height: 50px;
	width: 50px;
}

.username {
	padding-left: 20px;
	padding-top: 3px;
}

.post .user-block {
	margin-bottom: 0px;
}

.post {
	border-bottom: 0px solid #adb5bd;
}
</style>
</head>

<body>
	<section class="content-header">
		<div class="container-fluid">
			<div class="row md-2">
				<div class="col-sm-6">
					<h3>멘토링 신청</h3>
				</div>
			</div>
		</div>
	</section>

	<section class="content container-fluid">
		<div class="row">
			<div class="col-md-6">
				<div class="card card-info">
					<div class="card-header">
						<h3 class="card-title">멘토 선택</h3>
					</div>


					<form class="form-horizontal">
						<div class="tab-pane fade active show" id="custom-tabs-four-home"
							role="tabpanel" aria-labelledby="custom-tabs-four-home-tab"
							style="margin: 20px">

							<span class="material-symbols-outlined">
								corporate_fare
							</span>
						  	<span >PoJo기업</span>
							<div id="organization" ></div>

						</div>
					</form>
				</div>
			</div>

			<div class="col-md-6">
				<div class="card card-info">
					<div class="card-header">
						<h3 class="card-title">멘토 추천</h3>
					</div>

					<form class="form-horizontal">
						<div class="card-body">
							<div class="post">
								<div class="user-block">
									<img class="img-circle img-bordered-sm"
										src="../resources/images/indexPage/chopa.jpg" alt="user image">
									<span class="username">강동주 팀장&nbsp;&nbsp;CUTE</span> <span
										class="username">경영지원팀&nbsp;&nbsp;팀장/부장</span>
									<hr>
								</div>
							</div>
							<div class="post">
								<div class="user-block">
									<img class="img-circle img-bordered-sm"
										src="../resources/images/indexPage/chopa.jpg" alt="user image">
									<span class="username">강동주 팀장&nbsp;&nbsp;CUTE</span> <span
										class="username">경영지원팀&nbsp;&nbsp;팀장/부장</span>
									<hr>
								</div>
							</div>
						</div>
					</form>
				</div>
			</div>

		</div>
	</section>

<script>
$('#organization').jstree({
	core : {
		data :${organizationNode}
	},
	types : {
		'default' : {'icon': 'jstree-folder'}
	},
	 plugins: ['wholerow', 'types']
});

$('#organization').on("changed.jstree", function(e,data){
	if(data.node.id.length > 3){
		if(data.node.id == ${loginUser.eno}){
			alert("본인은 멘토링 신청대상이 아닙니다.");
		}else{
			$.ajax({
				url : "<%=request.getContextPath()%>/mentoring/getSubMentoring.do?eno=" + data.node.id,
				type : 'get',
				success:function(res){
					console.log(res);
					if(res > 0){
						alert("이미 신청한 멘토입니다.");
					}else{
						OpenWindow('mentoDetail.do?eno=' + data.node.id, '멘토링 신청', '800', '600')
					}
				},
				error:function(error){
					alert(error);
				}
			})
		}
	}
});
</script>

</body>

