                    				<option value="1" >재택근무</option>
                    				<option value="2" >세미나</option>
                    				<option value="3" >특강</option>
                    			</select>
							</div>
							<div class="form-group row" data-toggle="modal" data-target="#modal-default">
								<label for="" class="col-2">참조자</label> 
